@model LoginViewModel

<h2>Login</h2>
<form asp-controller="Auth" asp-action="Login" method="post">
    <input type="hidden" asp-for="ReturnUrl" />
    <div class="mb-3">
        <label asp-for="Username" for="Username" class="form-label"></label>
        <input asp-for="Username" id="Username" class="form-control" />
        <span asp-validation-for="Username"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Password" for="Password" class="form-label"></label>
        <input asp-for="Password" id="Password" class="form-control" />
        <span asp-validation-for="Password"></span>
    </div>
    <div class="mb-3">
        <button type="submit" class="btn btn-primary">Sign In</button>
    </div>
    <a asp-controller="Auth" asp-action="Register" asp-route-returnUrl="@Model.ReturnUrl">Register</a>
</form>
